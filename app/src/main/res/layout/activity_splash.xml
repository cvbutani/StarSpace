<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:src="@drawable/star"
        app:layout_constraintBottom_toTopOf="@+id/splash_sign_in"
        app:layout_constraintEnd_toEndOf="@+id/splash_sign_in"
        app:layout_constraintStart_toStartOf="@+id/splash_sign_in" />

    <Button
        android:id="@+id/splash_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/sign_in_text"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/splash_register"
        app:layout_constraintEnd_toEndOf="@+id/splash_register"
        app:layout_constraintStart_toStartOf="@+id/splash_register" />

    <Button
        android:id="@+id/splash_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="64dp"
        android:textAllCaps="false"
        android:text="@string/register_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>